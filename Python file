# Car game with written commands
while True:
    command = input('> ').lower()
    if command == 'start':
        print('The car has started...')
    elif command == 'stop':
        print('The car has stopped...')
    elif command == 'help':
        print('''
Start - To start the car.
Stop - To stop the car.
Quit- To quit the game.''')
    elif command == 'quit':
        break
